{

  "manifest_version": 2,
  "name": "Proxy SwitchyAlpha",
  "description": "Specify whether to use proxy for websites.",
  "version": "0.1",

  "icons": {
    "48": "icons/block.svg",
    "96": "icons/block.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "56.0a1"
    }
  },

  "background": {
    "scripts": [
      "background/proxy-handler.js"
    ]
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "browser_action": {
    "default_icon": "icons/block.svg",
    "default_title": "Proxy SwitchyAlpha",
    "default_popup": "popup/popup.html",
    "browser_style": true
  },

  "permissions": ["proxy", "storage", "<all_urls>"]

}
